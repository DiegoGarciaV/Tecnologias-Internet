<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true"><display-name>InventoryServlet</display-name>

    <display-name>Inventory</display-name>

    <!-- ConfiguraciÃ³n de Servlet -->
    <servlet>
        <servlet-name>InventoryServlet</servlet-name>
        <servlet-class>com.freshbowl.servlets.Inventory</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>InventoryFormServlet</servlet-name>
        <servlet-class>com.freshbowl.servlets.forms.InventoryForm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InventoryServlet</servlet-name>
        <url-pattern>/inventory</url-pattern>
    </servlet-mapping> 

    <servlet-mapping>
        <servlet-name>InventoryFormServlet</servlet-name>
        <url-pattern>/inventory/form</url-pattern>
    </servlet-mapping> 

</web-app>